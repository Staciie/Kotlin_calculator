<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/history_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/lightBlue"
            android:background="@color/white"
            android:text="History"
            android:gravity="start|bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_output"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textSize="40sp"
            android:textColor="@color/darkBlue"
            android:background="@color/white"
            android:text="0"
            android:gravity="end|bottom"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ButtonStyle"
                android:id="@+id/division_button"
                android:backgroundTint="@color/lightBlue"
                android:textSize="30sp"
                android:text="/" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ButtonStyle"
                android:id="@+id/multiplication_button"
                android:backgroundTint="@color/lightBlue"
                android:textSize="30sp"
                android:text="*" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ButtonStyle"
                android:id="@+id/minus_button"
                android:backgroundTint="@color/lightBlue"
                android:textSize="30sp"
                android:text="-" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/ButtonStyle"
                android:id="@+id/plus_button"
                android:backgroundTint="@color/lightBlue"
                android:textSize="30sp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/result_output">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/square_button_background">

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/seven_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="7" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/eight_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="8" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/nine_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/four_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="4" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/five_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="5" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/six_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/one_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/two_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="2" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/three_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/dot_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="." />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/zero_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="0" />

                    <androidx.appcompat.widget.AppCompatButton
                        style="@style/ButtonStyle"
                        android:id="@+id/clear_button"
                        android:backgroundTint="@color/darkBlue"
                        android:textSize="20sp"
                        android:text="C" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    style="@style/ButtonStyle"
                    android:id="@+id/equal_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="75"
                    android:backgroundTint="@color/pink"
                    android:textSize="30sp"
                    android:text="=" />
                <ImageButton
                    style="@style/ButtonStyle"
                    android:id="@+id/delete_button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="25"
                    android:backgroundTint="@color/pink"
                    android:textSize="20sp"
                    android:text="Delete"
                    android:src="@drawable/delete_left_svgrepo_com"
                    android:padding="30dp"
                    android:scaleType="center"
                    >
             </ImageButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>